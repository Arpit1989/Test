<section id="right">
    <header id="header-small">
    <h2>Showing Article </h2>
   </header>
  <div class="clear"></div>
  
    <section id="contents">
    <section id="homemain">
    <article class="post singlepost">
    <header>
    <h2><%= @article.title %></h2>
    </header>
    <div class="entry">

<p id="notice"><%= notice %></p>

<p>
  <b>Post:</b>
  <%= @article.post.html_safe %>
</p>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
  <%= button_to 'Remove Comment', [comment.article, comment],:class => "btn btn-primary btn-small",
               :method => :delete,
               :data => { :confirm => 'Are you sure?' } %>
</p>
<% end %>
<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit :class => "btn btn-primary" %>
  </p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-small" %> 
<%= link_to 'Back', articles_path , :class => "btn btn-small"%>
    </div>
    </article></section>
    
    
    <aside id="rightsidebar">
    <div class="imagepost">
    <img src="/assets/rain.jpg" width="170" height="165" alt="rain">
    <p class="caption">Work in Progress!!</p>
    </div>
    </aside>
    <div class="clear"></div>
  </section>
</section>